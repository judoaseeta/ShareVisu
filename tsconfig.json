{
  "compilerOptions": {
    /*
      compile target is esnext to use loadable components library
      compiling to es5 will be a job of babel
    */ 
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": false,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "**/*.test.*",
    "**/*.spec.*",
    "node_modules",
    "dist",
    "public"
  ],
}
